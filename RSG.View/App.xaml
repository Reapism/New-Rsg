<Application
    x:Class="RSG.View.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SettingsViews="clr-namespace:RSG.View.Views.Settings"
    xmlns:ViewModels="clr-namespace:RSG.View.ViewModels"
    xmlns:Views="clr-namespace:RSG.View.Views"
    xmlns:local="clr-namespace:RSG.View"
    StartupUri="Windows/RsgWindow.xaml">
    <Application.Resources>
        <!--  Create a Shared ContextMenu  -->
        <ContextMenu x:Key="SharedContextMenu" x:Shared="true">
            <MenuItem Header="Color" IsCheckable="true" />
            <Separator />
            <MenuItem Header="Shape" />
        </ContextMenu>
    </Application.Resources>
</Application>
