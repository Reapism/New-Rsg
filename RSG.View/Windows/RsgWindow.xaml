<Window x:Name="window" x:Class="RSG.View.Windows.RsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSG.View.Windows"
        mc:Ignorable="d"
        Title="RSG" Height="450" Width="800" Icon="/Resources/logo.png">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#7F000000" Offset="1"/>
                <GradientStop Color="#7F474747"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" MinWidth="20" Width="20">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#7F000000" Offset="1"/>
                    <GradientStop Color="#7F474747"/>
                </RadialGradientBrush>
            </Grid.Background>
            <Button x:Name="button" Content="" HorizontalAlignment="Right" Margin="0,10,-5,0" VerticalAlignment="Top" Width="30" Padding="0,0,0,0" Click="button_Click"/>
        </Grid>
    </Grid>
</Window>
