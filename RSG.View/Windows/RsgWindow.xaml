<Window x:Name="window" x:Class="RSG.View.Windows.RsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSG.View.Windows"
        mc:Ignorable="d"
        Title="RSG" Height="450" Width="800" Icon="/Resources/logo.png">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#7F000000" Offset="1"/>
                <GradientStop Color="#7F474747"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid Name="NavigationalGrid" HorizontalAlignment="Left" MinWidth="20" Width="20" MinHeight="100">
            <Grid.Background>
                <SolidColorBrush x:Name="NavigationalColor" Color="DarkGray" />
            </Grid.Background>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="NavigationalGrid" Storyboard.TargetProperty="Width" From="20" To="75" Duration="0:0:0" />
                            <ColorAnimation Storyboard.TargetName="NavigationalColor" Storyboard.TargetProperty="Color" From="DarkGray" To="LightBlue" Duration="0:0:0.35" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="Grid.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="NavigationalGrid" Storyboard.TargetProperty="Width" From="75" To="20" Duration="0:0:0" />
                            <ColorAnimation Storyboard.TargetName="NavigationalColor" Storyboard.TargetProperty="Color" From="LightBlue" To="DarkGray" Duration="0:0:0.35" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Button x:Name="Dictionary" Margin="10,0,10,300" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="Dictionary_Click">
                <Image x:Name="image" HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/dictionary.png" StretchDirection="Both" Stretch="UniformToFill"/>
            </Button>
        </Grid>
        <TabControl x:Name="Navigation" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,0,0,0" SelectedIndex="0" TabStripPlacement="Bottom">
            <TabItem Header="String" Visibility="Hidden">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Dictionary" Visibility="Hidden">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="autoGenerateButton" Content="AutoGen" HorizontalAlignment="Left" Margin="94,120,0,0" VerticalAlignment="Top" BorderBrush="White" Background="#00DDDDDD" Height="50" Width="50" Foreground="White" Click="autoGenerateButton_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="dictionary" Content="AutoGen" HorizontalAlignment="Left" Margin="176,120,0,0" VerticalAlignment="Top" BorderBrush="White" Background="#00DDDDDD" Height="50" Width="50" Foreground="White" Click="dictionary_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ListBox x:Name="listBox" Margin="292,25,34,25"/>

    </Grid>
</Window>
