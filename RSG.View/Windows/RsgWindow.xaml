<Window x:Name="window" x:Class="RSG.View.Windows.RsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSG.View.Windows"
        mc:Ignorable="d"
        Title="RSG" Height="450" Width="800"  MinWidth="800" MinHeight="450" Icon="/Resources/high/random.png">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#7F000000" Offset="1"/>
                <GradientStop Color="#7F474747"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid Name="NavigationalGrid" HorizontalAlignment="Left" MinWidth="30" MinHeight="100" Width="30">
            <Grid.Background>
                <SolidColorBrush x:Name="NavigationalColor" Color="#FFCFFFFD" />
            </Grid.Background>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="NavigationalGrid" Storyboard.TargetProperty="Width" From="30" To="75" Duration="0:0:0" />
                            <ColorAnimation Storyboard.TargetName="NavigationalColor" Storyboard.TargetProperty="Color" From="#FFCFFFFD" To="LightGray" Duration="0:0:0.35" />
                            <DoubleAnimation Storyboard.TargetName="Navigation" Storyboard.TargetProperty="Width" From="775" To="710" Duration="0:0:0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Grid.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="NavigationalGrid" Storyboard.TargetProperty="Width" From="75" To="30" Duration="0:0:0" />
                            <ColorAnimation Storyboard.TargetName="NavigationalColor" Storyboard.TargetProperty="Color" From="LightGray" To="#FFCFFFFD" Duration="0:0:0.35" />
                            <DoubleAnimation Storyboard.TargetName="Navigation" Storyboard.TargetProperty="Width" From="710" To="755" Duration="0:0:0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Button x:Name="String" Margin="10,0,10,300" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="String">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/grayscale/run.png" StretchDirection="Both" Stretch="Uniform"/>
                </StackPanel>
            </Button>

            <Button x:Name="About" Margin="10,0,10,150" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="About">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/grayscale/about.png" StretchDirection="Both" Stretch="Uniform"/>
                </StackPanel>
            </Button>

            <Button x:Name="Dictionary" Margin="10,0,10,0" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="Dictionary">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/grayscale/dictionary.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>

            <Button x:Name="Search" Margin="10,0,10,-150" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="Search">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/grayscale/search.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>

            <Button x:Name="Settings" Margin="10,0,10,-300" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="Settings">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/grayscale/settings.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>
        </Grid>
        <TabControl x:Name="Navigation" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="755" SelectedIndex="0" TabStripPlacement="Bottom" Visibility="Visible" Foreground="White">
            <TabItem Header="String" Visibility="Collapsed">
                <Grid Background="ForestGreen">
                    <Grid HorizontalAlignment="Left" MinWidth="390" Background="Gray">
                        <GroupBox Background="#4C9B9B9B" Header="Generate">
                            <Grid>
                                
                            </Grid>
                        </GroupBox>
                    </Grid>
                    <Grid HorizontalAlignment="Right" MinWidth="390" Background="Gray">
                        <GroupBox Header="Statistics">
                            <Grid>
                                
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="About" Visibility="Collapsed">
                <Grid Background="Gray">
                </Grid>
            </TabItem>
            <TabItem Header="Dictionary" Visibility="Collapsed">
                <Grid Background="AliceBlue">
                </Grid>
            </TabItem>
            <TabItem Header="Search" Visibility="Collapsed">
                <Grid Background="Blue">
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Visibility="Collapsed">
                <Grid Background="Black">
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
