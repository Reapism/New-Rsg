<Window x:Name="window" x:Class="RSG.View.Windows.RsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSG.View.Windows"
        mc:Ignorable="d"
        Title="RSG" Height="450" Width="800" Icon="/Resources/logo.png">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#7F000000" Offset="1"/>
                <GradientStop Color="#7F474747"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid Name="NavigationalGrid" HorizontalAlignment="Left" MinWidth="30" MinHeight="100">
            <Grid.Background>
                <SolidColorBrush x:Name="NavigationalColor" Color="DarkGray" />
            </Grid.Background>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="NavigationalGrid" Storyboard.TargetProperty="Width" From="30" To="75" Duration="0:0:0" />
                            <ColorAnimation Storyboard.TargetName="NavigationalColor" Storyboard.TargetProperty="Color" From="DarkGray" To="LightBlue" Duration="0:0:0.35" />
                            <DoubleAnimation Storyboard.TargetName="Navigation" Storyboard.TargetProperty="Width" From="775" To="710" Duration="0:0:0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Grid.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="NavigationalGrid" Storyboard.TargetProperty="Width" From="75" To="30" Duration="0:0:0" />
                            <ColorAnimation Storyboard.TargetName="NavigationalColor" Storyboard.TargetProperty="Color" From="LightBlue" To="DarkGray" Duration="0:0:0.35" />
                            <DoubleAnimation Storyboard.TargetName="Navigation" Storyboard.TargetProperty="Width" From="710" To="755" Duration="0:0:0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Button x:Name="String" Margin="10,0,10,300" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="String">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/autogenerate.ico" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>

            <Button x:Name="About" Margin="10,0,10,150" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="About">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/dictionary.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>

            <Button x:Name="Dictionary" Margin="10,0,10,0" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="Dictionary">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/dictionary.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>

            <Button x:Name="Search" Margin="10,0,10,-150" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="Search">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/dictionary.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>

            <Button x:Name="Settings" Margin="10,0,10,-300" Background="#00DDDDDD" BorderBrush="#FF25E6F0" Foreground="#FF25E6F0" Height="50" Width="50" MinWidth="50" MinHeight="50" Click="NavigationMenu_Click" Tag="Settings">
                <StackPanel>
                    <Image HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Width="50" Source="/Resources/dictionary.png" StretchDirection="Both" Stretch="UniformToFill"/>
                </StackPanel>
            </Button>
        </Grid>
        <TabControl x:Name="Navigation" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="780" Margin="20,0,0,0" SelectedIndex="0" TabStripPlacement="Bottom">
            <TabItem Header="String" Visibility="Hidden">
                <Grid Background="ForestGreen">
                    <Button x:Name="button" Content="Button" Click="button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="About" Visibility="Hidden">
                <Grid Background="Gray">
                </Grid>
            </TabItem>
            <TabItem Header="Dictionary" Visibility="Hidden">
                <Grid Background="AliceBlue">
                </Grid>
            </TabItem>
            <TabItem Header="Search" Visibility="Hidden">
                <Grid Background="Gray">
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Visibility="Hidden">
                <Grid Background="Gray">
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
