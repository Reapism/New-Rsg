<Window x:Name="window" x:Class="RSG.View.Windows.RsgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSG.View.Windows"
        mc:Ignorable="d"
        Title="RSG" Height="450" Width="800" Icon="/Resources/logo.png">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#7F000000" Offset="1"/>
                <GradientStop Color="#7F474747"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Rectangle Name="MyRectangle" HorizontalAlignment="Left" MinWidth="20" Width="20" MinHeight="100" VerticalAlignment="Stretch">
            <Rectangle.Fill>
                <SolidColorBrush x:Name="MySolidColorBrush" Color="GreenYellow" />
            </Rectangle.Fill>
            <Rectangle.Triggers>
                <EventTrigger RoutedEvent="Rectangle.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MyRectangle" Storyboard.TargetProperty="Width" From="20" To="75" Duration="0:0:0.55" />
                            <ColorAnimation Storyboard.TargetName="MySolidColorBrush" Storyboard.TargetProperty="Color" From="DarkGray" To="Green" Duration="0:0:0.55" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Rectangle.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MyRectangle" Storyboard.TargetProperty="Width" From="75" To="20" Duration="0:0:0.1" />
                            <ColorAnimation Storyboard.TargetName="MySolidColorBrush" Storyboard.TargetProperty="Color" From="Gray" To="Green" Duration="0:0:0.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>
        <Button x:Name="button" Content="generate json" HorizontalAlignment="Left" Margin="218,136,0,0" VerticalAlignment="Top" Click="button_Click_1"/>
        <Button x:Name="button1" Content="Read" HorizontalAlignment="Left" Margin="317,136,0,0" VerticalAlignment="Top" Click="button1_Click" Height="165" Width="349" IsEnabled="False"/>
    </Grid>
</Window>
