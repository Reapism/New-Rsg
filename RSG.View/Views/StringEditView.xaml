<UserControl x:Class="RSG.View.Views.StringEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RSG.View.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Stretch" MinWidth="390" Background="White">
            <GroupBox Header="Generate">
                <GroupBox.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFB9B9B9" Offset="1"/>
                        <GradientStop Color="#FFE8E8E8" Offset="0"/>
                    </RadialGradientBrush>
                </GroupBox.Background>
                <Grid>
                    <StackPanel>
                        <TextBox HorizontalAlignment="Stretch" Margin="5,5,25,5" Text="{Binding StringLength, Mode=TwoWay}" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Stretch" Margin="5,5,25,5" Text="{Binding Iterations, Mode=TwoWay}" VerticalAlignment="Top" />
                        <ComboBox HorizontalAlignment="Stretch" Margin="5,5,25,5" ItemsSource="{Binding RandomizationTypes, Mode=OneWay}" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" DataContext="StringViewModel"/>
                        <Button Content="Button" Margin="5,5,25,5"/>

                    </StackPanel>
                </Grid>
            </GroupBox>
            
        </Grid>
    </Grid>
</UserControl>
