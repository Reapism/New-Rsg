<UserControl x:Class="RSG.View.Views.StringEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RSG.View.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Stretch" MinWidth="390" Background="White">
            <GroupBox Header="Generate">
                <GroupBox.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFB9B9B9" Offset="1"/>
                        <GradientStop Color="#FFE8E8E8" Offset="0"/>
                    </RadialGradientBrush>
                </GroupBox.Background>
                <Grid>
                    <StackPanel>
                        <TextBox HorizontalAlignment="Left" Margin="5" Text="{Binding StringLength, Mode=TwoWay}" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Width="317"/>
                        <TextBox HorizontalAlignment="Left" Margin="5" Text="{Binding Iterations, Mode=TwoWay}" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Width="317"/>
                        <ComboBox HorizontalAlignment="Left" Margin="5" ItemsSource="{Binding RandomizationTypes, Mode=OneWay}" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Width="317" DataContext="StringViewModel"/>
                        <Button Content="Button"/>

                    </StackPanel>
                </Grid>
            </GroupBox>
            <Grid HorizontalAlignment="Stretch" MinWidth="390" Background="Gray" Margin="335,0,0,0">
                <GroupBox Header="Statistics">
                    <GroupBox.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFB9B9B9" Offset="1"/>
                            <GradientStop Color="#FFE8E8E8" Offset="0"/>
                        </RadialGradientBrush>
                    </GroupBox.Background>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
